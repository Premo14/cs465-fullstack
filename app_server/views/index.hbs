<!-- Website template by freewebsitetemplates.com -->
<head>
    <meta charset="UTF-8">
    <title>Travlr Getaways Website Template</title>
    <link rel="stylesheet" href="../stylesheets/style.css" type="text/css">
</head>
<body>
<div id="background">
    <div id="page">
       {{>header}}
        <div id="contents">
            <div id="adbox">
                <img src="../images/sea-sound.jpg" alt="Img">
                <h1>Enjoy the Summer with Us!</h1>
            </div>
            <div id="main">
                <div class="box">
                    <div>
                        <div>
                            <h3>Latest Blog</h3>
                            {{#each blogs}}
                                {{#ifCond @index '<' 2}}
                                    <h4><a href="/news">{{this.title}}</a></h4>
                                    <p>{{this.date}}</p>
                                    <p>{{this.summary}}</p>
                                {{/ifCond}}
                            {{/each}}
                        </div>
                    </div>
                </div>
                <div id="testimonials" class="box">
                    <div>
                        <div>
                            <h3>Testimonials</h3>
                            {{#each testimonials}}
                                {{#ifCond @index '<' 2}}
                                    <p>
                                        {{this.testimonial}}
                                        <span>~ {{this.author}}</span>
                                    </p>
                                {{/ifCond}}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
            <div id="sidebar">
                <div class="section">
                    <a href="/rooms"><img src="../images/rooms.png" alt="Img"></a>
                </div>
                <div class="section">
                    <a href="/travel"><img src="../images/dive-site.png" alt="Img"></a>
                </div>
                <div class="section">
                    <a href="/foods"><img src="../images/food.png" alt="Img"></a>
                </div>
            </div>
        </div>
    </div>
    {{>footer}}
</div>
</body>
