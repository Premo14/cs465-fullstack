<head>
    <meta charset="UTF-8">
    <title>Foods - Travlr Getaways Website Template</title>
    <link rel="stylesheet" href="../stylesheets/style.css" type="text/css">
</head>
<body>
<div id="background">
    <div id="page">
        {{>header}}
        <div id="contents">
            <div class="box">
                <div>
                    <div class="body">
                        <h1>Meals</h1>
                        <ul id="foods">
                            <li>
                                {{#each mealsJSON}}
                                    <h2>{{this.name}}</h2>
                                    <div class="infos">
                                        {{#each this.items}}
                                            <a href="/meals"><img src="../images/{{this.image}}" alt="Img" height="169" width="780"><span class="cover"></span></a>
                                            <p>
                                            <span>{{this.title}}</span> {{this.description}}
                                            </p>
                                        {{/each}}
                                    </div>
                                {{/each}}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer}}
</div>
</body>